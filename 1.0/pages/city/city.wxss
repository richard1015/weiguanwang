/* pages/city/city.wxss */

.city {
  /*position: relative;*/
  width: 100%;
  height: 100%;
  /*overflow: hidden;*/
  font-size: 28rpx;
}
.city_title {
  padding: 24rpx 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.city_title_border {
  border: 1px solid #e8e8e8;
  border-radius: 5px;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #fff;
}

.city_title_border_text {
  width: 85%;
  display: inline-block;
}

.city_title_border_text input {
  padding-left: 10px;
  border-right: 1px solid #e8e8e8;
}

.city_title_border_search {
  position: relative;
  width: 15%;
  display: inline-block;
  vertical-align:top;
}

.city_title_border_search icon {
  /* padding-left: 10px; */
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  vertical-align: top;
}

.city_tab {
  background: #fff;
  height: 88rpx;
}

.city_tab_lable {
  text-align: center;
  width: 50%;
  line-height: 88rpx;
  display: inline-block;
}

.city_tab_lable span {
  float: right;
  width: 1rpx;
  height: 68rpx;
  background: #e8e8e8;
  margin-top: 10rpx;
}

.city_tab_lable.active {
  color: #16bcfa;
  border-bottom: 1px solid #16bcfa;
}

.city_list_title {
  height: 60rpx;
  padding-left: 24rpx;
  line-height: 60rpx;
  color: #666;
  font-size: 24rpx;
}

.city_hot {
  width: 100%;
}

.city_hot_list {
  padding: 8rpx 0;
  padding-left: 24rpx;
  background: #fff;
  overflow: hidden;
}

.city_hot_list span {
  float: left;
  width: 145rpx;
  height: 60rpx;
  margin: 12rpx 12rpx 12rpx 0;
  padding: 0 20rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #e8e8e8;
  border-radius: 3px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.city_list {
  overflow: hidden;
}

.city_list .city_list_info {
  padding: 20rpx 0 10rpx 20rpx;
  float: left;
  width: 100%;
  height: 100%;
  background: #fff;
}

.city_list .city_list_info image {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  overflow: hidden;
  float: left;
}

.city_list .city_list_info label {
  padding-left: 20rpx;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #222;
  float: left;
}


.sreach_wrap{
    width: 700rpx;
    height:56rpx;
    margin:24rpx auto;
    background-color: #ffffff;
    border:1rpx solid rgba(0, 0, 0, .2);
}
.sreach_input{
    display: inline-block;
    width: 570rpx;
    height:40rpx;
    min-height: auto;
    padding-left: 28rpx;
    margin-top: 8rpx;
    border-right:1rpx solid #e8e8e8;
    font-size: 28rpx;
    line-height: 40rpx;
}
.sreach_wrap .iconbtn{
   position: relative;
   display:inline-block;
   width:100rpx;
   height:56rpx;
   vertical-align:top;
}
.sreach_wrap icon{
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
}
.sreach_placeholder{
    font-size: 28rpx;
    line-height: 40rpx;
}