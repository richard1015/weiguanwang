.scenicspot_goback{
  position: absolute;
  top:40rpx;
  left:0;
  z-index: 5;
  width: 150rpx;
  height: 50rpx;
  background-color: #ffffff;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  font-size:24rpx;
  line-height: 50rpx;
  color:#fe7c1a;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
swiper.scenicspot_swiper{
  width: 750rpx;
  height: 380rpx;
}
.scenicspot_swiper .slide-image {
  width:100%;
  height: 100%;
}
.scenicspot_sort {
  display: flex;
  height: 88rpx;
  margin-top: 20rpx;
  /* margin-bottom: 40rpx; */
  background-color: #fff;
  border-bottom: 2rpx solid #e8e8e8;
}
.scenicspot_sort_list {
  flex: 1;
  height: 72rpx;
  margin-top: 8rpx;
  border-right: 2rpx solid #e8e8e8;
  line-height: 72rpx;
  text-align: center;
}
.scenicspot_sort_list image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-top: 16rpx;
  margin-right: 10rpx;
  vertical-align: top;
}
.scenicspot_main {
  height:100%;
  /* padding: 40rpx 0 0 0; */
  /* background-color: #fff; */
  overflow-x:hidden;
}
.scenicspot_view{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding-top:40rpx;
  background:#ffffff;
}
.scenicspot_main_list {
  /* float:left; */
  width: 202rpx;
  height: 242rpx;
  margin: 0 24rpx 36rpx 24rpx;
  text-align: center;
}
.scenicspot_main_list .image_wrap {
  position: relative;
  width: 202rpx;
  height: 202rpx;
  overflow: hidden;
}
.scenicspot_main_list .image_wrap .middle_icon{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 10;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 30rpx;
}
.scenicspot_main_list .image_wrap .middle_icon view{
  position:absolute;
  top:14rpx;
  left:28rpx;
  display:block;
  width:0;
  height:0;
  border-top:18rpx solid transparent;
  border-right:16rpx solid transparent;
  border-left:16rpx solid transparent;
  border-bottom:20rpx solid #ffffff;
  transform:rotate(90deg);
}
.scenicspot_main_list .image_wrap .required {
  position: absolute;
  top: 14rpx;
  left: -25rpx;
  z-index: 10;
  width: 100rpx;
  height: 30rpx;
  background-color: #ff8e3e;
  transform: rotate(-45deg);
  font-size: 22rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
}
.scenicspot_main_list .image_wrap image {
  display: block;
  width: 100%;
  height: 100%;
}
.scenicspot_main_list span {
  display:inline-block;
  width:100%;
  font-size: 22rpx;
  line-height: 40rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.scenicspot_main .scenicspot_load{
    margin:28rpx 0;
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
}
.scenicspot_main .scenicspot_load image{
    width:478rpx;
    height:28rpx;
}
