/* 模板3 */
.module3{
    background-color: #ffffff;
    padding-left:26rpx;
}
.module3 .title{
    height: 32rpx;
    padding-left:20rpx;
    margin: 40rpx 0 30rpx 0;
    border-left:8rpx solid #0018ff;
    font-size: 32rpx;
    line-height: 32rpx;
    color:#333333;
    overflow: hidden;
}
.module3 navigator{
    float:left;
    position: relative;
    width:330rpx;
    height: 154rpx;
    margin:0 30rpx 30rpx 0;
}
.module3 navigator image{
    display: block;
    width: 100%;
    height: 100%;
}
.module3 navigator .name{
    position: absolute;
    left:150rpx;
    top:62rpx;
    width: 160rpx;
    font-size: 32rpx;
    line-height: 36rpx;
    color: #333333;
    overflow: hidden;
}

.loading{
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
}
.loading text{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
}